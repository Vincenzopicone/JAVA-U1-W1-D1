		String arrayStringhe2[] = new String[6];
		for (int i = 0; i < arrayStringhe2.length; i++) {
			arrayStringhe[i] = arrayStringhe[i];
			}
		
		System.out.println("Esercizio 2.3: " + arrayStringhe2.length);	
		
		for (int i = 0; i < arrayStringhe2.length; i++) {
			System.out.println("Esercizio 2.3: " + arrayStringhe2[i]);		
		};

public static int prodotto (int x, int  y) 
{
	return x * y;
};

public static String concatena (String S, int n) 
{
	
	return (String) S + n ;
};



}



