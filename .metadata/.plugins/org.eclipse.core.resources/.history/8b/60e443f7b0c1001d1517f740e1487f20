package it.epicode.be;

public class Helloworld {

public static void main (String[] args)
		{
		// Stampa a console  la frase
		System.out.println("This is my first Epicode Java Project!");
		System.out.println("Esercizio 2.1: " +  prodotto(6, 5));
		System.out.println("Esercizio 2.2: " +  concatena("Batti il ", 5));

		
		
		
		
		String arrayStringhe [] = new String [5];
		arrayStringhe[0]="Ciao";
		arrayStringhe[1]="mi";
		arrayStringhe[2]="chiamo";
		arrayStringhe[3]="Vincenzo";
		arrayStringhe[4]="Picone";	
		
		String nuova = "NUOVA STRINGA";
		/// lunghezza array		
		System.out.println("Esercizio 2.3: " + arrayStringhe.length);		
		/// contenuto array
		for (int i = 0; i < arrayStringhe.length; i++ ) {
			System.out.println("Esercizio 2.3: " + arrayStringhe[i]);
		};
		String arrayStringhe2[] = new String [6];
		arrayStringhe2[2] = nuova;
		arrayStringhe2[0] = arrayStringhe[2];
		System.out.println("Esercizio 2.3: " + arrayStringhe2.length);
		
		
		
		
		};

public static int prodotto (int x, int  y) 
{
	return x * y;
};

public static String concatena (String S, int n) 
{
	
	return (String) S + n ;
};



}



