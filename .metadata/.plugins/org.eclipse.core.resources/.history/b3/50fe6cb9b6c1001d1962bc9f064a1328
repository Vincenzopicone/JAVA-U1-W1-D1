public static int prodotto (int x, int  y) 
{
	return x * y;
};

public static String concatena (String S, int n) 
{
	
	return (String) S + n ;
};

public static String[] newArray (String[] a, String b) {
	String arrayStringhe2 []= {a[0], a[1], b, a[2], a[3], a[4]};
	return arrayStringhe2;
	
	
